<html>
    <head>
        <link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css" rel="stylesheet" id="bootstrap-css">
        <script src="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/js/bootstrap.min.js"></script>
        <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    </head>
    <body>
            <div class="container">
                    <table class="table">
                    <thead>
                    <tr>
                    <th scope="col">#</th>
                    <th scope="col">First</th>
                    <th scope="col">Last</th>
                    <th scope="col">Email</th>
                    <th scope="col">Home/Cell Number</th>
                    <th scope="col">Message</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% for(var i =0; i <contacts.length; i++) {%>
                            <tr>
                                <td><%= i+1 %></td>
                                <a href="<%= results.ejs %>">
                                    <td><%= contacts[i].firstName %></td>
                                </a>
                                <td><%= contacts[i].lastName %></td>
                                <td><%= contacts[i].email %></td>
                                <td><%= contacts[i].number %></td>
                                <td><%= contacts[i].subject %></td>
                                <td><%= contacts[i].message %></td>
                            </tr>    
                        <% } %>
                    </tbody>
                    </table>
                    </div>
                    
                    <br>
                    <br>
        <div class="container">
            <form method="POST" action="/saveContact" class="well span8">
                <div class="row">
                    <div class="span3">
                        <label>First Name</label> 
                        <input name="firstName"class="span3" placeholder=
                        "Your First Name" type="text"> 
                        <label>Last Name</label>
                        <input name="lastName"class="span3" placeholder="Your Last Name" type="text">
                        <label>Email Address</label> <input name="email"class="span3" placeholder=
                        "Your email address" type="text">
                        <label>Home Number</label><input name="number" class="span3" placeholder=
                        "Enter your home number" type="text">
                        <label>Cell Number</label><input name="number" class="span3" placeholder=
                        "Enter your cell number" type="text"> 
                    </div>
                    <div class="span5">
                        <label>Message</label> 
                        <textarea class="input-xlarge span5" id="message" name="message"
                        rows="10">
                        </textarea>
                    </div>
                    <button class="btn btn-primary pull-right" type=
                    "submit" value="saveContact">Send</button>
                </div>
            </form>
        </div>
    </body>
</html>    
